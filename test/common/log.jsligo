
// Return str repeated n times
export const repeat = (str: string, n: nat) => {
    const loop = (n: nat, acc: string) : string => {
        if (n == (0 as nat)) {
            return acc;
        } else {
            return loop(abs(n - (1 as nat)), acc + str);
        };
    };

    return loop(n, "");
};

// Log boxed lbl
//
// "+-----------+"
// "| My string |"
// "+-----------+"
export const describe = (lbl : string) => {
    const hr = "+" + repeat("-", String.length(lbl) + (2 as nat)) +  "+";
    Test.log(hr);
    Test.log("| " + lbl + " |");
    Test.log(hr);
};